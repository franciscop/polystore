{
  "name": "polystore",
  "version": "0.16.1",
  "description": "A small compatibility layer for many popular KV stores like localStorage, Redis, FileSystem, etc.",
  "homepage": "https://polystore.dev/",
  "repository": "https://github.com/franciscop/polystore.git",
  "bugs": "https://github.com/franciscop/polystore/issues",
  "funding": "https://www.paypal.me/franciscopresencia/19",
  "author": "Francisco Presencia <public@francisco.io> (https://francisco.io/)",
  "type": "module",
  "sideEffects": false,
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "analyze": "npm run build && esbuild src/index.ts --bundle --packages=external --format=esm --minify --outfile=index.min.js && gzip-size index.min.js && rm index.min.js",
    "build": "bunx tsup src/index.ts --format esm --dts --out-dir . --target node24",
    "lint": "npx tsc --noEmit",
    "start": "bun test --watch",
    "test": "bun test",
    "run:db": "etcd",
    "run:server": "bun ./src/server.ts"
  },
  "keywords": [
    "kv",
    "store",
    "polystore",
    "key-value",
    "key",
    "value"
  ],
  "license": "MIT",
  "devDependencies": {
    "@deno/kv": "^0.8.1",
    "@types/bun": "^1.3.3",
    "@types/jsdom": "^27.0.0",
    "better-sqlite3": "^12.5.0",
    "check-dts": "^0.8.0",
    "cross-fetch": "^4.0.0",
    "dotenv": "^16.3.1",
    "edge-mock": "^0.0.15",
    "esbuild": "^0.27.0",
    "etcd3": "^1.1.2",
    "gzip-size-cli": "^5.1.0",
    "jsdom": "^27.2.0",
    "level": "^8.0.1",
    "localforage": "^1.10.0",
    "redis": "^4.6.10",
    "tsup": "^8.5.1"
  },
  "documentation": {
    "title": "üè¨ Polystore - A universal library for standardizing any KV-store",
    "home": "assets/home.html",
    "homepage": "https://polystore.dev/",
    "menu": {
      "Documentation": "/documentation",
      "Issues": "https://github.com/franciscop/polystore/issues",
      "Get help": "https://superpeer.com/francisco/-/javascript-and-react-help",
      "Github": "https://github.com/franciscop/polystore"
    }
  }
}
